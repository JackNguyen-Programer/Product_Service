
@model BanHang.ServiceUser.user
@{
    ViewBag.Title = "Manage";
}

<script src="~/Scripts/jquery-1.8.2.js"></script>
<script>
    $(document).ready(function () {
       
        if ('@TempData["message"]'.length != 0) 
            alert('Cập nhật thành công!')           
        });
    
</script>

  <div class="center_title_bar" style="font-size:15px" >Thông tin Thành Viên</div>
@using (Html.BeginForm("Manage", "TaiKhoan", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
<div class="register-box" >
    <table width="580" border="0">
        <tr>
            <td colspan="2">
                <h3>Thông tin đăng nhập</h3>
            </td>
        </tr>
        <tr hidden="hidden">
            <td width="107" height="40">ID</td>
            <td width="473">
                <input type="text" name="id" size="35" value="@Model.id" />
            </td>
        </tr>
        <tr hidden="hidden">
            <td width="107" height="40">Email</td>
            <td width="473">
                <input type="text" name="email" size="35" value="@Model.email"/></td>
        </tr>
        <tr hidden="hidden">
            <td width="107" height="40">Id_role</td>
            <td width="473">
                <input type="text" name="id_role" size="35" value="@Model.id_role" />
            </td>
        </tr>
        <tr>
            <td width="107" height="40">Email</td>
            <td width="473">
                <input type="text" size="35" value="@Model.email" disabled/></td>
        </tr>
        <tr>
            <td height="40">Mật khẩu</td>
            <td>
                <input type="password" name="password" size="35" value="@Model.password" /></td>
        </tr>
        <tr>
            <td height="40" colspan="2">
                <h3>Thông tin cá nhân</h3>
            </td>
        </tr>
        <tr>
            <td height="40">Họ tên </td>
            <td>
                <input type="text" name="name" size="35" value="@Model.name" />
            </td>
        </tr>
        <tr>
            <td height="40">Số điện thoại </td>
            <td>
                <input type="text" name="phone_number" size="35" value="@Model.phone_number" />
            </td>
        </tr>
        <tr>
            <td height="40">Địa chỉ</td>
            <td>
                <input type="text" name="address" size="35" value="@Model.address" /></td>
        </tr>

        <tr>
            <td>&nbsp;</td>
            <td style="padding-left :50px"> <input type="submit" id="submit" value="Lưu lại" /></td>
        </tr>
    </table>

</div>
}